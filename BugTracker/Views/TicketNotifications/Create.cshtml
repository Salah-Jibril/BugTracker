@model BugTracker.Models.TicketNotification

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <h2>
        Create a new Notification
        <button class="pull-right btn btn-success" title="Submit Changes" type="submit" style="margin:10px"><i class="fa fa-plus-circle fa-2x"></i></button>
        <a class="pull-right" title="Back to Tickets" type="button" href="/TicketNotifications/Index"><i class="fa fa-chevron-circle-left fa-2x"></i></a>
    </h2>
    <br />
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TicketId)
        @Html.HiddenFor(model => model.UserId)
        <div class="col-md-10 well" style="margin-right:75px;margin-left:75px">
            <h5>The notification will go to the creator of the ticket. The Developer is able to send a notification to the user, when he/she needs extra information
            or to notify the client of any decision that has been reached.</h5>
            <div class="form-group">
                @Html.LabelFor(model => model.Ticket.Title, "Ticket Title", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Ticket.Title, new { @class = "form-control", @readonly = "readonly", style="width:250px" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Notice, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextArea("notice", "", 5, 1, new { htmlAttributes = new { @class = "form-control", id = "notice", style = "width:100%" }, style = "width:100%; border-radius:10px; background-color: #c1f6bd;", placeholder = "Enter your notification here" })
                    @Html.ValidationMessageFor(model => model.Notice, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
}

